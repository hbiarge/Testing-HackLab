@model Acheve.UI.ViewModels.LogOnModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acheve - Control de presencia</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar">
        <div class="navbar-inner">
            <a class="brand" href="@Url.Action("Actual", "Situacion", new { area = string.Empty })">Acheve - Control de presencia</a>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="span10">
                <div class="hero-unit">
                    <h2>Inicio de sesión</h2>

                    @Html.ValidationSummary(true, "No se ha podido iniciar sesión en el sistema.")

                    @using (Html.BeginForm())
                    {
                        <div>
                            <fieldset>
                                <legend>Información de la cuenta de dominio</legend>

                                @Html.LabelFor(m => m.UserName)
                                @Html.TextBoxFor(m => m.UserName)
                                @Html.ValidationMessageFor(m => m.UserName)

                                @Html.LabelFor(m => m.Password)

                                @Html.PasswordFor(m => m.Password)
                                @Html.ValidationMessageFor(m => m.Password)

                                <p>
                                    <input class="btn btn-primary" type="submit" value="Entrar" />
                                </p>
                            </fieldset>
                            <p><small class="pull-right"><strong>Version @ViewBag.Version</strong> [@ViewBag.FileVersion]</small></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
